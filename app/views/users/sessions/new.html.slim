= provide(:title, "ユーザーログイン")
.w-50.mx-auto
  h2.text-center ユーザーログイン
  = bootstrap_form_with model: @user, url: user_session_path, local: true do |f|
    = f.email_field :email, autofocus: true, placeholder: "(例) xxx@example.com"
    = f.password_field :password, placeholder: "現在のパスワード"
    = f.check_box :remember_me
    = f.submit "ログイン", class: "btn btn-success btn-block mt-3"
  == render "shared/links"
