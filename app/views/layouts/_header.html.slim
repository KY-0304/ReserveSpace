header.navbar.navbar-expand-lg.navbar-light.bg-light
  .container
    = link_to 'iSpace', root_path, class: "navbar-brand"

    ul.navbar-nav.ml-auto
      - if owner_signed_in?
        li.nav-item
          = link_to 'ログアウト', destroy_owner_session_path, method: :delete, class: "nav-link"
      - else
        li.nav-item
          = link_to 'オーナーログイン', new_owner_session_path, class: "nav-link"
        li.nav-item
          = link_to 'ユーザーログイン', root_path, class: "nav-link"
